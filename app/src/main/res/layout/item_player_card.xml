<com.example.clearrecyclerwithvideo.view.PlayerCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:clickable="true"
    android:clipChildren="true"
    android:focusable="true"
    android:foreground="@drawable/ripple"
    android:foregroundGravity="fill"
    android:orientation="vertical"
    android:stateListAnimator="@drawable/card_statelist_animator">

    <com.example.clearrecyclerwithvideo.view.PlayerTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/container_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="TextText\n@TextText" />

    </RelativeLayout>

</com.example.clearrecyclerwithvideo.view.PlayerCardView>